<div class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-4 faux-center">
    <%= form_for(resource, as: resource_name, url: password_path, html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password...." , class: 'form-control input-lg' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Again..." , class: 'form-control input-lg' %>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: 'btn btn-default btn-lg btn-block' %>
      </div>
    <% end %>

  </div>
</div>
